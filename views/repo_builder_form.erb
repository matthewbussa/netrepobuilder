<body>

  <div class="alert alert-danger fade in <%=flash[:error].nil? ? 'hide' : ''%>">
    <strong>D'oh!  </strong><%=flash[:error] %>
  </div>

  <div class="alert alert-success fade in <%=flash[:success].nil? ? 'hide' : ''%>">
    <strong>Success  </strong><%=flash[:success] %>
  </div>

  <h1><center>.NET Repo Builder</center></h1>

  <div class="col-md-6 col-md-offset-3 well">
      <form action="/repo/" method="POST">
        <div class="form-group">
          <label for="repo_name">GitHub Repo Name</label>
          <input type="text" class="form-control" name="repo_name" placeholder="username/repo name">
          <p id="repoNameHelpBlock" class="form-text text-muted">
            Enter the part after https://www.github.com/
          </p>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control form-control-sm" name="email" placeholder="you@example.com">
          <p id="emailHelpBlock" class="form-text text-muted">
            Email will only be used to send the build result
          </p>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <!-- <input type="submit"> -->
      </form>

    <p id="waitHelpBlock" class="form-text text-muted">
      *Once you click submit, it may take up to 30 seconds to finish.
    </p>
  </div>


